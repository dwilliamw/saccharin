@{
    ViewBag.Title = "Contact Us";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<head>
    <link href="~/Content/contact.css" rel="stylesheet">
</head>
<!-- page introduction start-->
<section class="breadcrumb" style="background-image:url(/img/contact-main.jpg);">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="breadcrumb_iner">
                    <div class="breadcrumb_iner_item">
                        <p>Contact Us</p>
                        <h3 style="color: white; font-size: 36px">Please Feel Free to Contact us</h3>
                        <h3 style="color: white; font-size: 36px">and Your Opinion is Valuable to Us!</h3>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
<!-- page introduction end-->

<div class="container1">
    <div style="text-align:center">
        <form id="contact" action="" method="post">
            <h3>Quick Contact Form</h3>
            <h4>Feel Free to Express Your Opinion!</h4>
            <fieldset>
                Rating for our website: <select type="number" class="unit" style="width: 130px; height: 30px" required />
                <option value="">Please choose</option>
                <option value="1">1</option>
                <option value="2">2</option>
                <option value="3">3</option>
                <option value="4">4</option>
                <option value="5">5</option>
                </select> <i class="fas fa-star"></i><br />
                <p>[1 <i class="fas fa-star"></i> is the lowest, 5 <i class="fas fa-star"></i> is the highest]</p>
            </fieldset>
            <fieldset>
                <textarea id="text-feedback" placeholder="Type your Message Here...." tabindex="2" required></textarea>
            </fieldset>
            <fieldset>
                <button name="submit" type="submit" id="contact-submit" onclick="sendToDB()">Submit</button>
            </fieldset>
        </form>
    </div>
</div>
<script src="~/Scripts/contact.js"></script>